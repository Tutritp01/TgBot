<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
        http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>AllCars</servlet-name>
        <servlet-class>com.tutrit.stoservice.servlets.CarTableServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AllCars</servlet-name>
        <url-pattern>/carTable</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.tutrit.stoservice.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>InputCommand</servlet-name>
        <servlet-class>com.tutrit.stoservice.servlets.InputCommandServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InputCommand</servlet-name>
        <url-pattern>/input</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CarForm</servlet-name>
        <servlet-class>com.tutrit.stoservice.servlets.CarFormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CarForm</servlet-name>
        <url-pattern>/carForm</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CarCard</servlet-name>
        <servlet-class>com.tutrit.stoservice.servlets.CarCardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CarCard</servlet-name>
        <url-pattern>/carCard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CarDelete</servlet-name>
        <servlet-class>com.tutrit.stoservice.servlets.DeleteCardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CarDelete</servlet-name>
        <url-pattern>/carDelete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AllCustomers</servlet-name>
        <servlet-class>com.tutrit.stoservice.servlets.CustomersTableServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AllCustomers</servlet-name>
        <url-pattern>/customerTable</url-pattern>
    </servlet-mapping>
</web-app>
